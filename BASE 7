class Solution:
		def convertToBase7(self, num: int) -> str:
			if num == 0:
				return "0"
		
			# Handle negative numbers
			negative = num < 0
			num = abs(num)
			
			result = ""
			while num > 0:
				remainder = num % 7
				result = str(remainder) + result
				num //= 7
			
			if negative:
				result = "-" + result
			
			return result

